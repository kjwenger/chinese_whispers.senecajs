{
  "name": "chinese_whispers.senecajs",
  "version": "0.1.0",
  "description": "Microservices implementing the Chinese Whispers game with Seneca.js",
  "main": "server.js",
  "scripts": {
    "lint:js": "standard .",
    "lint": "npm run lint:js",
    "test:unit": "mocha --recursive test/ --seneca.log.quiet",
    "test": "npm run lint & npm run test:unit",
    "scan": "npm run scan:depcheck; npm run scan:dependency-check; npm run scan:nsp; npm run scan:retire; npm run scan:snyk; npm run scan:scanjs",
    "scan:depcheck": "depcheck",
    "scan:dependency-check": "dependency-check package.json",
    "scan:nsp": "nsp check",
    "scan:retire": "retire",
    "scan:snyk": "snyk test",
    "scan:scanjs": "eslint --no-eslintrc --config eslintrc-scanjs .",
    "client": "node client --seneca.log.quiet",
    "start:google": "node google --seneca.log.quiet",
    "start:yandex": "node yandex --seneca.log.quiet",
    "start:conductor": "node conductor --seneca.log.quiet",
    "start:translator": "node translator --seneca.log.quiet",
    "start:monitor": "node monitor --seneca.log.quiet",
    "start:service": "node service --seneca.log.quiet",
    "start:server": "node server --seneca.log.quiet",
    "start:base": "node base --seneca.log.quiet",
    "start:api": "node api --seneca.log.quiet",
    "start:requests": "node requests --seneca.log.quiet",
    "start": "npm run start:server",
    "watch:google": "nodemon google --seneca.log.quiet",
    "watch:yandex": "nodemon yandex --seneca.log.quiet",
    "watch:conductor": "nodemon conductor --seneca.log.quiet",
    "watch:translator": "nodemon translator --seneca.log.quiet",
    "watch:monitor": "nodemon monitor --seneca.log.quiet",
    "watch:service": "nodemon service --seneca.log.quiet",
    "watch:server": "nodemon server --seneca.log.quiet",
    "watch:base": "nodemon base --seneca.log.quiet",
    "watch:api": "nodemon api --seneca.log.quiet",
    "watch:requests": "nodemon requests --seneca.log.quiet",
    "watch": "npm run watch:service"
  },
  "engines": {
    "node": "^8.7.0",
    "npm": "^5.4.2"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "dependencies": {
    "async": "^2.5.0",
    "chairo": "^3.0.0",
    "debug": "^3.1.0",
    "google-translate-api": "^2.3.0",
    "hapi": "^16.6.2",
    "hapi-swagger": "^8.0.0",
    "hoek": "^5.0.0",
    "intl": "^1.2.5",
    "intl-locales-supported": "^1.0.0",
    "joi": "^13.0.1",
    "nconf": "^0.8.5",
    "prom-client": "^10.2.0",
    "request": "^2.83.0",
    "seneca": "^3.4.3",
    "seneca-balance-client": "^0.6.1",
    "seneca-consul-registry": "^0.1.0",
    "seneca-mesh": "^0.11.0",
    "seneca-parambulator": "^0.3.0",
    "underscore": "^1.8.3",
    "underscore-deep-extend": "^1.1.5",
    "underscore.deepclone": "^0.1.3",
    "yandex-translate": "^2.1.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "depcheck": "^0.6.7",
    "dependency-check": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-plugin-no-unsanitized": "^2.0.1",
    "eslint-plugin-no-wildcard-postmessage": "^0.1.3",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nsp": "^2.7.0",
    "retire": "^1.4.0",
    "snyk": "^1.40.2",
    "standard": "^10.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjwenger/chinese_whispers.senecajs.git"
  },
  "keywords": [
    "chinese",
    "whispers",
    "seneca.js",
    "microservice",
    "node.js"
  ],
  "author": "Klaus Wenger <kjwenger@yahoo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kjwenger/chinese_whispers.senecajs/issues"
  },
  "homepage": "https://github.com/kjwenger/chinese_whispers.senecajs#readme"
}
